<div class="row">
  <div class="col-md-4 col-md-offset-4 text-center">

    <h2>Paramètre profile</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render 'shared/devise_errors' %>

      <div class="form-group">
        <%= f.text_field :first_name, autofocus: true, class: "form-control", placeholder: "Prénom" %>
      </div>

      <div class="form-group">
        <%= f.text_field :last_name, autofocus: true, class: "form-control", placeholder: "Nom" %>
      </div>

      <div class="form-group">
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Adresse email" %>
      </div>

      <div class="form-group">
        <%= f.text_field :role, autofocus: true, class: "form-control", placeholder: "Fonction dans l'entreprise" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Nouveau mot de passe (si vous souhaitez changer de mot de passe)" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirmation du mot de passe" %>
      </div>

      <div class="form-group">
        <%= f.password_field :current_password, autocomplete: "off", class: "form-control", placeholder: "Mot de passe actuel (pour confirmer tout changement)" %>
      </div>

      <div class="actions">
        <%= f.submit "Update", { :class=>"btn btn-primary" } %>
      </div>
    <% end %>

  </div>
</div>
